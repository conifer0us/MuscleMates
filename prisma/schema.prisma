generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../main.db"
}

model cookies {
  cookieID  Int     @id @default(autoincrement())
  username  String?
  cookieval String?
  users     users?  @relation(fields: [username], references: [username], onUpdate: NoAction)
}

model friends {
  connectionID Int     @id @default(autoincrement())
  friend1      String?
  friend2      String?
}

model matchRequests {
  requestID Int     @id @default(autoincrement())
  sender    String?
  receiver  String?
}

model profiles {
  profileID Int     @id @default(autoincrement())
  username  String?
  name      String?
  age       String?
  bio       String?
  gym       String?
  users     users?  @relation(fields: [username], references: [username], onUpdate: NoAction)
}

model users {
  userID       Int        @id @default(autoincrement())
  username     String?    @unique
  useremail    String?    @unique
  passwordhash String?
  cookies      cookies[]
  profiles     profiles[]
}
